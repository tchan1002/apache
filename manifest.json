{
  "manifest_version": 3,
  "name": "Sherpa 2 (Apache)",
  "version": "2.0.0",
  "description": "Your ubiquitous voice-first assistant for browsing",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "background"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hey Sherpa"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["permission.html", "permission.js"],
      "matches": ["*://*/*"]
    }
  ]
}
