{
  "manifest_version": 3,
  "name": "Sherpa",
  "version": "1.0.0",
  "description": "Take me to the best page on this site",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://pathfinder-bay-mu.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Take me there"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["permission.html", "permission.js"],
      "matches": ["*://*/*"]
    }
  ]
}
